<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="init()" xmlns:components="net.lanelife.framework.catwindows.components.*">
	<fx:Script>
		<![CDATA[
			import net.lanelife.framework.catwindows.events.TaskbarButtonEvent;
			import net.lanelife.framework.catwindows.events.WindowEventDispatcher;
			
			public var containerIndex:Number = 0;
			
			protected function init():void
			{
				WindowEventDispatcher.getInstance().addEventListener(
					TaskbarButtonEvent.TASKBAR_BUTTON_CREATE+containerIndex, taskbarButtonCreate
				);
				WindowEventDispatcher.getInstance().addEventListener(
					TaskbarButtonEvent.TASKBAR_BUTTON_DESTROY+containerIndex, taskbarButtonDestroy
				);
			}
			
			private function taskbarButtonCreate(event:TaskbarButtonEvent):void
			{
				container.addElement(event.taskbarButton);
			}
			
			private function taskbarButtonDestroy(event:TaskbarButtonEvent):void
			{
				container.removeElement(event.taskbarButton);
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<components:TaskbarButtonContainerScroller width="100%" height="100%">
		<s:Group id="container" width="100%" height="100%">
			<s:layout>
				<s:TileLayout horizontalGap="2" verticalGap="0"/>
			</s:layout>
		</s:Group>
	</components:TaskbarButtonContainerScroller>
</s:Group>
