<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  creationComplete="init()">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import net.lanelife.framework.catwindows.events.WindowEvent;
			import net.lanelife.framework.catwindows.events.WindowEventDispatcher;
			
			public var containerIndex:Number = 0;
			
			protected function init():void
			{
				WindowEventDispatcher.getInstance().addEventListener(
					WindowEvent.WINDOW_CREATE+containerIndex, windowCreate
				);
				WindowEventDispatcher.getInstance().addEventListener(
					WindowEvent.WINDOW_DEPTH_CHANGE+containerIndex, windowDepthChange
				);
				WindowEventDispatcher.getInstance().addEventListener(
					WindowEvent.WINDOW_DESTROY+containerIndex, windowDestroy
				);
			}
			
			private function windowCreate(event:WindowEvent):void
			{
				this.addElement(event.window);
			}
			
			private function windowDepthChange(event:WindowEvent):void
			{
				var d:Number = 0;
				for (var i:int; i < this.numElements; i++)
				{
					if (this.getElementAt(i).depth > d)
					{
						d = this.getElementAt(i).depth;
					}
				}
				event.window.depth = d + 1;
			}
			
			private function windowDestroy(event:WindowEvent):void
			{
				this.removeElement(event.window);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
</s:SkinnableContainer>
