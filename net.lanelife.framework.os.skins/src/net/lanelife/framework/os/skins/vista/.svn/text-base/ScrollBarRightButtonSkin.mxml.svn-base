<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Rect left="0" right="0" minWidth="17" top="0" bottom="0" minHeight="14" radiusX="1">
		<s:stroke>
			<s:SolidColorStroke color="0x979797" color.over="#3c7fb1" color.down="#18598a" weight="1"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xf4f4f4" 
								 color.over="0xe3f4fc"
								 color.down="0xcaecf9"/>
				<s:GradientEntry color="0xc0c0c4" 
								 color.over="0xa6d7f1"
								 color.down="0x66badd"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Rect left="1" right="1" top="1" height="6">
		<s:fill>
			<s:SolidColor color="0xFFFFFF"
						  alpha="0.75"
						  alpha.over="0.33"
						  alpha.down="0.33" />
		</s:fill>
	</s:Rect>
	
	<s:Rect left="1" top="1" right="1" bottom="1">
		<s:stroke>
			<s:LinearGradientStroke weight="1">
				<s:GradientEntry color="0xFFFFFF" 
								 alpha="0.22" />
				<s:GradientEntry color="0xFFFFFF" 
								 alpha="0.22" />
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
	
	<s:Path data="M3.5 0 0 4 7 3.5Z" horizontalCenter="0" verticalCenter="0" id="arrow" rotation="90">
		<s:fill>
			<s:SolidColor color="#707070" color.over="#1c5b7c" color.down="#1e4b63" />
		</s:fill>
	</s:Path>

	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
</s:Skin>
