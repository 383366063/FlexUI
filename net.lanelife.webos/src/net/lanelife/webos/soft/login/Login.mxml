<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		s|Label {
			fontSize:12px;
			fontFamily:宋体; 
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			import net.lanelife.framework.catwindows.core.SystemContext;
			import net.lanelife.framework.catwindows.core.SystemUser;
			import net.lanelife.framework.catwindows.core.SystemVariables;
			import net.lanelife.framework.catwindows.events.SystemLoginEvent;
			protected function loginButton_clickHandler(event:MouseEvent):void
			{
				
				var user:SystemUser = new SystemUser();
				user.username = username.text;
				user.password = password.text;
				user.face = "os/resources/faces/1.gif";
				
				SystemVariables.systemUser = user;
				SystemContext.instance.raiseEvent(SystemLoginEvent.LOGIN_SUCCESS);
				//FlexGlobals.topLevelApplication.removeElement(this);
			}
			
			public function getApplicationName():String {   
				return "登录程序";   
			}
			
			public function getAuthor():String {   
				return "蓝易实验室"; 
			}
			
			public function run():void {
				this.horizontalCenter = 0;
				this.verticalCenter = 0;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Image top="-40" left="5" source="net/lanelife/webos/soft/login/images/login-welcome.png" smooth="true" />
	
	<s:Group>
		
		<s:Rect width="322" height="177" radiusX="4">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="#ffffff"/>
					<s:GradientEntry color="#e5e5de"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		<s:Line width="322" bottom="35">
			<s:stroke>
				<s:SolidColorStroke color="#cecdc8"/>
			</s:stroke>
		</s:Line>
		<s:Line width="322" bottom="34">
			<s:stroke>
				<s:SolidColorStroke color="#ffffff"/>
			</s:stroke>
		</s:Line>
		
		<s:Rect width="60" height="60" left="13" top="23" rotation="-2">
			<s:fill>
				<s:SolidColor color="#000000" alpha="0.04"/>
			</s:fill>
		</s:Rect>
		<s:Rect width="60" height="60" left="21" top="21">
			<s:fill>
				<s:SolidColor color="#cecdc8" alpha="0.6"/>
			</s:fill>
		</s:Rect>
		<s:Rect width="60" height="60" left="20" top="20">
			<s:fill>
				<s:SolidColor color="#ffffff"/>
			</s:fill>
		</s:Rect>
		
		
		<s:Group left="100" top="21">
			<s:Label text="帐号" top="9" color="#4996ab"/>
			<s:TextInput id="username" editable="false" text="lane" left="30" width="170" height="30" focusAlpha="0" skinClass="net.lanelife.webos.soft.login.skins.LoginTextInputSkin"/>
			<s:Label text="密码" top="54" color="#4996ab"/>
			<s:TextInput id="password" displayAsPassword="true" left="30" top="45" width="170" height="30" focusAlpha="0" skinClass="net.lanelife.webos.soft.login.skins.LoginTextInputSkin"/>
		</s:Group>
		
		<s:Button id="loginButton" width="120" height="29" left="34" top="145" label="登 录"
				  click="loginButton_clickHandler(event)"
				  skinClass="net.lanelife.webos.soft.login.skins.LoginButtonSkin"/>
		
		<s:Button label="注 册" width="120" height="29" left="170" top="145" skinClass="net.lanelife.webos.soft.login.skins.LoginButtonSkin"/>
		<s:Label x="14" y="116" color="#9B9797" text="尚未开发注册，请直接登录，对系统的操作将不会保存。"/>
		
	</s:Group>
	
	<s:Label horizontalCenter="0" y="198" text="LANE  WEB  OS  BETA" color="#ffffff" fontFamily="Trebuchet MS" fontSize="20"/>
	
</s:Module>
