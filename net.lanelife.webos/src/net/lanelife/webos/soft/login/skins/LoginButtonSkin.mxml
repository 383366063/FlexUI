<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="21" minHeight="21" alpha.disabled="0.5">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- SkinParts
	name=labelDisplay, type=spark.components.supportClasses.TextBase, required=false
	-->
	
	
	<s:Rect id="fill" left="0" right="0" top="0" bottom="0" radiusX="3">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#72d4ec" 
								 color.over="#3dbbd9" 
								 color.down="#d3d5d5"/>
				<s:GradientEntry color="#3dbbd9" 
								 color.over="#72d4ec" 
								 color.down="#dce0e2"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 maxDisplayedLines="1" color="#ffffff"
			 horizontalCenter="0" verticalCenter="0"
			 left="10" right="10" top="2" bottom="2">
	</s:Label>
</s:Skin>
